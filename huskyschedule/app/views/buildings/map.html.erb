<% end %></select>
</div><!-- side -->

<div class="content" id="content">
<div id="temp" class="breadcrumbs" style="width: 400px; float: left;"><a href="index.html">Home</a> > <a href="#" onclick="clearSelected();">Map</a></div>
<div class="searchmap" style="float: right; width: 300px; text-align: right;">Search Map: <input type="text"/><input type="submit" style="width: 50px;" value="Find" /></div>
<div id="map"></div>

</div> <!-- wrapper -->
<script type="text/javascript">initialize(<%= ((@show_building!=nil)? "\"#{@show_building.abbrev}\"" : "\"\"") %>, "<%= url_for(:controller=>"/", :only_path=>false) %>");</script>

