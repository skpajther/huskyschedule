<%
count = @buildings.length
if(count > 0)
    amount_string = "Found #{count} possible match" + ((count>1)? "es:" : ":") 
else
    amount_string = "No results found. Please try a different search."
end
%>
<%= amount_string %>
    <ul>
    <% for building in @buildings %>
        <li><a href="#" onclick="hideResultsOpenMarker('<%= building.abbrev %>');"><%= building.name %> (<%= building.abbrev %>)</a></li>
    <% end %>
    </ul>

<a href="#" onclick="hideResultsClearSelected();">Return to map</a>